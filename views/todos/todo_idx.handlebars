<div class="flex justify-center mt-32" >
{{!-- <div class="bg-indigo-200 w-1/2 rounded-lg px-6"> --}}
<div class="bg-gradient-to-r from-indigo-300 to-gray-300 w-full max-w-4xl rounded-lg px-6">
    <div class="border-l-4 border-indigo-700 -ml-6 pl-6 flex items-center justify-between my-4">
        <div class="font-semibold text-black text-xl">Todo List</div>
        {{!-- <iv class="text-red-400">See all</div> --}}
        <a class="text-red-600" href="todos/add">Add Todo</a>
    </div>
    {{#each todos}}
    <hr class="-mx-6"/>
    <div class="flex items-center justify-between my-4">
        <div class="flex-1 pl-2">
            <div class="text-black font-semibold">
            {{!-- PHP Developers --}}
                <p>{{title}}</p>
            </div>
            <div class="text-black font-thin">
                <p>{{details}}</p>
            </div>
        </div>
        <div class="text-red-600 mr-5 text-lg">{{dueDate}}</div>
        {{!-- <div class="text-green-400">Hello</div> --}}
        <button class="bg-yellow-300 rounded-lg p-1 mr-2">edit</button>
        <button class="bg-red-400 rounded-lg p-1 mr-2">delete</button>
    </div>
    {{else}}
        <p>No todos listed</p>
    {{/each}}
    
</div>
</div>