<div class="flex justify-center">
<div class="bg-gray-700 w-1/2 rounded px-6">
    <div class="border-l-4 border-red-400 -ml-6 pl-6 flex items-center justify-between my-4">
        <div class="font-semibold text-white">Todo List</div>
        {{!-- <iv class="text-red-400">See all</div> --}}
        <a class="text-red-400" href="todos/add">Add Todo</a>
    </div>
    {{#each todos}}
    <hr class="-mx-6"/>
    <div class="flex items-center justify-between my-4">
        <div class="flex-1 pl-2">
            <div class="text-white font-semibold">
            {{!-- PHP Developers --}}
                <p>{{title}}</p>
            </div>
            <div class="text-white font-thin">
                <p>{{details}}</p>
            </div>
        </div>
        <div class="text-red-400 mr-5">{{dueDate}}</div>
        {{!-- <div class="text-green-400">Hello</div> --}}
        <button class="bg-green-400 mr-2">Edit</button>
        <button class="bg-yellow-400 mr-2">Delete</button>
    </div>
    {{else}}
        <p>No todos listed</p>
    {{/each}}
    
</div>
</div>